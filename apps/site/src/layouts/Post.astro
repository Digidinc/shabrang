---
import Base from './Base.astro';

interface Props {
  frontmatter: {
    title: string;
    description?: string;
    date: Date;
    tags?: string[];
    lang?: string;
  };
}

const { frontmatter } = Astro.props;
const lang = frontmatter.lang || 'en';
const dateObj = new Date(frontmatter.date);
const formattedDate = dateObj.toLocaleDateString(lang === 'fa' ? 'fa-IR' : 'en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
const readingTime = '5 min read'; // Could calculate from content
---

<Base title={frontmatter.title} description={frontmatter.description} lang={lang}>
  <article class="article">
    <!-- Article Header -->
    <header class="article-header">
      <div class="article-meta">
        <time datetime={dateObj.toISOString()}>{formattedDate}</time>
        <span class="separator">·</span>
        <span class="reading-time">{readingTime}</span>
      </div>
      <h1 class="article-title">{frontmatter.title}</h1>
      {frontmatter.description && (
        <p class="article-lead">{frontmatter.description}</p>
      )}
      {frontmatter.tags && frontmatter.tags.length > 0 && (
        <div class="article-tags">
          {frontmatter.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <!-- Article Body -->
    <div class="article-body">
      <slot />
    </div>

    <!-- Article Footer -->
    <footer class="article-footer">
      <div class="share-prompt">
        <p>If this resonated, share it with someone who might find it useful.</p>
      </div>
      <a href="/content/" class="back-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        {lang === 'fa' ? 'بازگشت به مقالات' : 'Back to Articles'}
      </a>
    </footer>
  </article>
</Base>

<style>
  .article {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: var(--space-xl) var(--space-lg);
  }

  /* ========================================
     ARTICLE HEADER
     ======================================== */
  .article-header {
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid var(--color-paper-dark);
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.9rem;
    color: var(--color-ink-lighter);
    margin-bottom: var(--space-md);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .separator {
    opacity: 0.5;
  }

  .article-title {
    font-size: clamp(2.25rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: var(--space-lg);
    letter-spacing: -0.03em;
  }

  .article-lead {
    font-size: 1.35rem;
    line-height: 1.5;
    color: var(--color-ink-light);
    font-weight: 300;
    margin-bottom: var(--space-lg);
  }

  .article-tags {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.8rem;
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-paper-dark);
    color: var(--color-ink-light);
    border-radius: 2px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* ========================================
     ARTICLE BODY - Beautiful typography
     ======================================== */
  .article-body {
    font-size: 1.125rem;
    line-height: 1.85;
  }

  .article-body :global(p) {
    margin-bottom: 1.75rem;
  }

  .article-body :global(h1) {
    font-size: 2.25rem;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
  }

  .article-body :global(h2) {
    font-size: 1.75rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-top: 1rem;
  }

  .article-body :global(h3) {
    font-size: 1.35rem;
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
  }

  /* First paragraph - drop cap effect optional */
  .article-body :global(p:first-of-type) {
    font-size: 1.25rem;
    line-height: 1.7;
  }

  /* Links */
  .article-body :global(a) {
    color: var(--color-teal);
    text-decoration: underline;
    text-decoration-color: var(--color-accent);
    text-underline-offset: 3px;
    text-decoration-thickness: 2px;
  }

  .article-body :global(a:hover) {
    color: var(--color-crimson);
    text-decoration-color: var(--color-crimson);
  }

  /* Blockquotes - Magazine pull quote style */
  .article-body :global(blockquote) {
    margin: 3rem 0;
    padding: 0;
    border: none;
    position: relative;
  }

  .article-body :global(blockquote p) {
    font-family: var(--font-display);
    font-size: 1.5rem;
    line-height: 1.4;
    font-weight: 500;
    font-style: italic;
    color: var(--color-ink);
    text-align: center;
    margin: 0;
  }

  .article-body :global(blockquote::before) {
    content: '"';
    font-family: var(--font-display);
    font-size: 4rem;
    color: var(--color-accent);
    position: absolute;
    top: -1rem;
    left: 50%;
    transform: translateX(-50%);
    line-height: 1;
  }

  .article-body :global(blockquote p) {
    padding-top: 2rem;
  }

  /* Lists */
  .article-body :global(ul),
  .article-body :global(ol) {
    margin-bottom: 1.75rem;
    padding-left: 1.5rem;
  }

  .article-body :global(li) {
    margin-bottom: 0.75rem;
  }

  .article-body :global(li::marker) {
    color: var(--color-accent);
  }

  /* Code */
  .article-body :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    background: var(--color-paper-dark);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    color: var(--color-crimson);
  }

  .article-body :global(pre) {
    background: var(--color-ink);
    color: var(--color-paper);
    padding: 1.5rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 2rem 0;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .article-body :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  /* Horizontal rule - elegant divider */
  .article-body :global(hr) {
    border: none;
    margin: 3rem auto;
    width: 100px;
    height: 1px;
    background: var(--color-accent);
  }

  /* Strong and emphasis */
  .article-body :global(strong) {
    font-weight: 600;
    color: var(--color-ink);
  }

  .article-body :global(em) {
    font-style: italic;
  }

  /* Images */
  .article-body :global(img) {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
    border-radius: 4px;
  }

  /* ========================================
     ARTICLE FOOTER
     ======================================== */
  .article-footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-paper-dark);
  }

  .share-prompt {
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .share-prompt p {
    font-size: 1.1rem;
    color: var(--color-ink-light);
    font-style: italic;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-ink-light);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .back-link:hover {
    color: var(--color-ink);
  }

  .back-link svg {
    transition: transform 0.2s ease;
  }

  .back-link:hover svg {
    transform: translateX(-4px);
  }

  /* RTL adjustments */
  :global(body.rtl) .back-link svg {
    transform: rotate(180deg);
  }

  :global(body.rtl) .back-link:hover svg {
    transform: rotate(180deg) translateX(-4px);
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 768px) {
    .article {
      padding: var(--space-lg) var(--space-md);
    }

    .article-title {
      font-size: 2rem;
    }

    .article-lead {
      font-size: 1.15rem;
    }

    .article-body {
      font-size: 1rem;
    }

    .article-body :global(blockquote p) {
      font-size: 1.25rem;
    }
  }
</style>
